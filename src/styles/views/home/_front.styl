.front
    .content
        flex-flow: column wrap
        align-items: center
        justify-content: center
        +min(2)
            margin-top: -20px
        h2
            font-size: 2.5rem
            font-weight: 600
            font-family: 'Lobster', cursive
            color: #e0218a
            margin: 0
            padding: 0
            letter-spacing: -3px
            align-items: flex-start
            +min(1)
                font-size: 5rem
                letter-spacing: -5px
            +min(2)
                font-size: 6rem
                margin: 0 0 0.9vw
                letter-spacing: -7px
            +min(3)
                font-size: 8rem
        div
            display: flex
            flex-wrap: wrap
            align-items: center
            justify-content: center
            p
                width: 100%
                font-size: 1.4rem
                text-align: center
                margin: rem(15px) 0 rem(30px)
                color: scheme.heading
                line-height: 1.2
                +min(1)
                    font-size: 2rem
                    margin: 0 0 rem(80px)
                +min(2)
                    font-size: 2.6rem
                +min(3)
                    font-size: 2.8rem
            div
                display: flex
                flex-flow: row wrap
                justify-content: center
                width: 100%
                +min(1)
                    width: auto
                p
                    font-size: 1.2rem
                    +min(1)
                        font-size: 1.4rem
                        margin: 0 0 rem(80px)
                    +min(2)
                        font-size: 1.8rem
                    +min(3)
                        font-size: 2.0rem
